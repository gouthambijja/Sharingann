@using ApexCharts;

    <ApexChart TItem="StockPrice"
               XAxisType="XAxisType.Datetime">

        <ApexCandleSeries TItem="StockPrice"
                          Items="stockPrices"
                          Name="Apex Stock Price"
                          XValue="@(e => e.Date.DayOnly().ToUnixTimeMilliseconds())"
                          Open="@(e => e.Open)"
                          High="@(e => e.High)"
                          Low="@(e => e.Low)"
                          Close="@(e => e.Close)"
                          OrderByDescending="e=> e.X" />
    </ApexChart>


@code {
    public class StockPrice
    {
        public DateTimeOffset Date;
        public decimal Open;
        public decimal High;
        public decimal Low;
        public decimal Close;
    }
    private List<StockPrice> stockPrices { get; set; }   = new List<StockPrice>(){new StockPrice
    {
        Date = DateTimeOffset.Now,
        Open= 100,
        Close = 10,
        Low = 50,
        High = 123
    }
    };
    }